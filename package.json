{
  "name": "moonshardapi",
  "version": "0.0.1",
  "description": "Api for moonshard WoW use database of Cataclysm 4.3.4",
  "main": "app.ts",
  "scripts": {
    "dev": "NODE_ENV=development tsc-watch -p ./tsconfig.json --onSuccess \"node ./build/bin/www.js\"",
    "lint": "eslint ./**/*.ts",
    "lint:fix": "eslint ./**/*.ts --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "start": "NODE_ENV=production node build/bin/www.js",
    "test": "NODE_ENV=test npx jest --verbose",
    "test:watch": "NODE_ENV=test npm run test -- --watchAll",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "npx tsc -p tsconfig.prod.json",
    "build:clean": "rm -rf build; exit 0",
    "build:di": "copy '**/*.{json,yaml,html,png}' build/",
    "prepare": "husky install"
  },
  "author": "JeanDev <mrjunior127@gmail.com> (https://github.com/Jean-Dv)",
  "license": "MIT",
  "dependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "compression": "1.7.4",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "helmet": "6.0.0",
    "log4js": "6.6.0",
    "module-alias": "2.2.2"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/module-alias": "2.0.1",
    "@types/node": "18.0.6",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "37.0.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-n": "16.0.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "^8.0.0",
    "jest": "28.1.3",
    "lint-staged": "14.0.0",
    "prettier": "3.0.2",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "tsc-watch": "5.0.3",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.(ts)": [
      "npm run lint:fix",
      "npm run prettier:fix"
    ]
  },
  "_moduleAliases": {
    "@apps": "build/apps",
    "@configs": "build/configs",
    "@root": "build"
  }
}
